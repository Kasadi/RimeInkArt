<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RimeInkArt</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
</head>
<body>
    <header class="sticky-top">
        <nav id="collapsed-navbar" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark text-white" style="height:18vh; background-image: linear-gradient(rgba(0,0,0,1) 93%,rgba(255,255,255,0)); font-family:birds of paradise ş personal use only;font-size:1.5em;">
            <div class="container" style="height:100%;">
                <a class="navbar-brand" asp-area="" asp-page="/Index" style="height:100%;"><img id="logo" src="~/images/logo_fekete.jpg" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1 justify-content-around text-center" id="collapsednav">
                        <li class="nav-item" style="flex: 0 0 20%;max-width: 20%;">
                            <a class="nav-link text-white collapsed-nav-li" asp-area="" asp-page="/About">Rólam</a>
                        </li>
                        <li class="nav-item" style="flex: 0 0 20%;max-width: 20%;">
                            <a class="nav-link text-white left-vertical-line collapsed-nav-li" asp-area="" asp-page="/Galery">Galéria</a>
                        </li>
                        <li class="nav-item" style="flex: 0 0 20%;max-width: 20%;">
                            <a class="nav-link text-light left-vertical-line collapsed-nav-li" asp-area="" asp-page="Aftercare">Utókezelés</a>
                        </li>
                        <li class="nav-item" style="flex: 0 0 20%;max-width: 20%;">
                            <a class="nav-link text-light left-vertical-line collapsed-nav-li" asp-area="" asp-page="Numbing">Érzéstelenítés</a>

                        </li>
                        <li class="nav-item" style="flex: 0 0 20%;max-width: 20%;">
                            <a class="nav-link text-light left-vertical-line collapsed-nav-li" asp-area="" asp-page="/Notes">Tudnivalók</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main">
        @RenderBody()
    </main>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
